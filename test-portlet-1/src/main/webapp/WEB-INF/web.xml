<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>TestPortlet1</display-name>

    <description>Automated generated Application Wrapper</description>

    <servlet>
        <servlet-name>TestPortlet1</servlet-name>
        <display-name>TestPortlet1</display-name>
        <description>Generated Portlet Wrapper</description>
        <servlet-class>org.apache.pluto.container.driver.PortletServlet</servlet-class>
        <init-param>
            <param-name>portlet-name</param-name>
            <param-value>TestPortlet1</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>TestPortlet1</servlet-name>
        <url-pattern>/PlutoInvoker/TestPortlet1</url-pattern>
    </servlet-mapping>

</web-app>
